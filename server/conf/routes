# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/tags						controllers.Application.tags()

POST	/upload/:tag				controllers.Application.upload(tag:String)
#GET		/upload/:tag				controllers.Application.upload(tag:String)

GET		/add						controllers.Application.add(tag:String, priority:String)

GET		/events/:tag				controllers.Application.events(tag:String)

GET		/test						controllers.Application.test()

GET		/img/:id					controllers.Application.img(id:String)

GET		/thumb/:id					controllers.Application.thumb(id:String)

GET		/markers/:tag				controllers.Application.markers(tag:String)